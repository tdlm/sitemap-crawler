{
  "name": "sitemap-crawl",
  "version": "1.0.2",
  "description": "CLI tool that crawls sitemap XML files and checks HTTP status of every URL",
  "type": "module",
  "bin": {
    "sitemap-crawl": "bin/sitemap-crawl.js"
  },
  "files": ["dist", "bin"],
  "scripts": {
    "build": "tsc",
    "prepare": "pnpm run build",
    "crawl": "node bin/sitemap-crawl.js",
    "start": "node bin/sitemap-crawl.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "csv-stringify": "^6.5.0",
    "dotenv": "^17.2.4",
    "fast-xml-parser": "^4.4.0",
    "p-limit": "^6.1.0",
    "undici": "^6.21.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Scott Weaver <scottmweaver@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tdlm/sitemap-crawler.git"
  },
  "keywords": ["sitemap", "crawler", "cli", "seo", "link-checker"]
}
