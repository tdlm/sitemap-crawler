{
  "name": "sitemap-crawl",
  "version": "1.1.0",
  "description": "CLI tool that crawls sitemap XML files and checks HTTP status of every URL",
  "type": "module",
  "bin": {
    "sitemap-crawl": "bin/sitemap-crawl.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "pnpm run build",
    "crawl": "node bin/sitemap-crawl.js",
    "start": "node bin/sitemap-crawl.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.3",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.3.1",
    "fast-xml-parser": "^5.3.7",
    "p-limit": "^7.3.0",
    "undici": "^7.22.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Scott Weaver <scottmweaver@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tdlm/sitemap-crawl.git"
  },
  "keywords": [
    "sitemap",
    "crawler",
    "cli",
    "seo",
    "link-checker"
  ]
}
